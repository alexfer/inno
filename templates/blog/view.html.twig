{% extends 'base.html.twig' %}

{% block title %}{{ entry.entryDetails.title }}{% endblock %}

{% block body %}
    <div class="page-title-area blog">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-title-content">
                        <h4>{{ entry.entryDetails.title }}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="section-area default bg-white">
        <div class="container">
            <h4>{{ entry.entryDetails.title }}</h4>
            <div class="entry-meta">
                <ul>
                    <li> <span>Posted On:</span>  <a href="#">{{ entry.createdAt|date(date_format) }}</a>
                    </li>
                    <li> <span>Posted By:</span>  <a href="#">{{ entry.user.userDetails.firstName }} {{ entry.user.userDetails.lastName }}</a>
                    </li>
                </ul>
            </div>
            {{ entry.entryDetails.content|raw }}
        </div>
    </section>
{% endblock %}