{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
<div class="row border mb-5 pt-3 rounded-1 shadow-sm">
    <div class="col-12 pt-2 px-xxl-5">
        <h4 class="pb-2">{{ 'text.login'|trans }}</h4>
        {% if error %}
            <div class="alert alert-danger text-center mt-3">
                {{ error.message }}
            </div>
        {% endif %}
        <div class="form-group mb-3">
            {{ form_label(form.email, 'label.form.email', {label_attr: {class: 'form-label'}}) }}
            <span class="text-danger">*</span>
            {{ form_widget(form.email, {attr: {value: last_username, class: 'form-control', placeholder: 'label.form.email'}}) }}
            {% if form_errors(form.email) %}
                <small class="form-text text-danger">{{ form_errors(form.email) }}</small>
            {% else %}
                <small class="form-text text-muted">{{ 'form.email.help'|trans }}</small>
            {% endif %}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.password, 'label.form.password') }} <span class="text-danger">*</span>
            {{ form_widget(form.password, {attr: {class: 'form-control', placeholder: 'label.form.password'}}) }}
            {% if form_errors(form.email) %}
                <small class="form-text text-danger">{{ form_errors(form.password) }}</small>
            {% else %}
                <small class="form-text text-muted">{{ 'form.password.help'|trans }}</small>
            {% endif %}
        </div>
        <div class="form-check ps-1">
            {{ form_widget(form._remember_me, {attr: {checked: 'checked'}}) }}
            {{ form_label(form._remember_me, 'label.form.keep_me_logged_in', {attr: {class: 'form-check-label'}}) }}
        </div>
    </div>
    <div class="col-md-12 my-4">
        <input type="hidden" name="_target_path" value="{{ path('app_cabinet') }}"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="row px-4 mx-1">
            <div class="col-sm-8">
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('app_forgot_password_request') }}">{{ 'text.forgot_password'|trans }}</a>
                    </li>
                    <li></li>
                </ul>
            </div>
            <div class="col-sm-4 text-end">
                {{ form_widget(form.login, { label: 'form.action.login' }) }}
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}