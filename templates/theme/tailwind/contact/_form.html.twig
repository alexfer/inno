{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
<h2 class="text-2xl pb-4 font-extrabold text-primary-700 dark:text-white">{{ 'title.contact_us'|trans }}</h2>
<div class="grid grid-cols-2 gap-5">
    <div class="relative mb-5">
        {{ form_label(form.name, 'label.form.name', {label_attr: {class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
        {{ form_widget(form.name, {attr: {class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500', placeholder: 'label.form.name'}}) }}
        <span class="mt-2 text-sm text-red-500">{{ form_errors(form.name) }}</span>
    </div>
    <div class="relative mb-5">
        {{ form_label(form.email, 'label.form.email', {label_attr: {class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
        {{ form_widget(form.email, {attr: {class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500', placeholder: 'label.form.email'}}) }}
        <span class="mt-2 text-sm text-red-500">{{ form_errors(form.email) }}</span>
    </div>
</div>
<div class="grid grid-cols-2 gap-5">
    <div class="relative mb-5">
        {{ form_label(form.phone, 'label.form.phone', {label_attr: {class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
        {{ form_widget(form.phone, {attr: {class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500', placeholder: 'label.form.phone'}}) }}
        <span class="mt-2 text-sm text-red-500">{{ form_errors(form.phone) }}</span>
    </div>
    <div class="relative mb-5">
        {{ form_label(form.subject, 'label.form.subject', {label_attr: {class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
        {{ form_widget(form.subject, {attr: {class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500', placeholder: 'label.form.subject'}}) }}
        <span class="mt-2 text-sm text-red-500">{{ form_errors(form.subject) }}</span>
    </div>
</div>
<div class="grid grid-cols-1">
    <div class="relative mb-5">
        {{ form_label(form.message, 'label.form.message', {label_attr: {class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
        {{ form_widget(form.message, {attr: {class: 'block p-2.5 w-full text-sm text-gray-900 resize-none bg-gray-50 rounded-md border border-gray-300 focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500', rows: 6, placeholder: 'label.form.message'}}) }}
        <span class="mt-2 text-sm text-red-500">{{ form_errors(form.message) }}</span>
    </div>
</div>
<div class="grid grid-cols-1">
    <div class="relative text-center my-3">
        {{ form_widget(form.send, { label: 'form.action.send', attr: {
            class: 'inline-block rounded bg-danger px-6 pb-2 pt-2.5 text-xs font-medium uppercase leading-normal text-white shadow-danger-3 transition duration-150 ease-in-out hover:bg-danger-accent-300 hover:shadow-danger-2 focus:bg-danger-accent-300 focus:shadow-danger-2 focus:outline-none focus:ring-0 active:bg-danger-600 active:shadow-danger-2 motion-reduce:transition-none dark:shadow-black/30 dark:hover:shadow-dark-strong dark:focus:shadow-dark-strong dark:active:shadow-dark-strong group-invalid:pointer-events-none group-invalid:opacity-30'
        } }) }}
    </div>
</div>
{{ form_end(form) }}
