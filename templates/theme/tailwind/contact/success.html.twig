{% extends 'base.html.twig' %}

{% block title %}{{ 'text.contact_us.success'|trans }}{% endblock %}
{% set _message = app.flashes('success') %}
{% block body %}
    <h2 class="text-2xl pb-4 font-extrabold text-primary-700 dark:text-white">{{ 'text.contact_us.success'|trans }}</h2>
    <p class="text-gray-500 dark:text-gray-400">{{ 'text.contact_us.success.short_desc'|trans|raw }}</p>
    <hr class="w-48 h-1 mx-auto my-2 bg-gray-100 border-0 rounded md:my-5 dark:bg-gray-700">
    <p class="text-gray-500 dark:text-gray-400 text-center">{{ 'text.contact_us.success.long_desc'|trans }}</p>
{% endblock %}
