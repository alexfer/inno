<div class="mx-auto text-white pt-5">
    <div class="max-w-screen-xl mx-auto md:grid md:grid-cols-3 sm:grid-cols-2 gap-3">
        <div class="block col-span-2">
            <ul class="inline-flex my-4 w-full space-x-5">
                <li>
                    <a href="{{ path('about') }}"
                       class="text-sm text-gray-400 hover:text-white">{{ 'title.about_us'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('faq') }}"
                       class="text-sm text-gray-400 hover:text-white">{{ 'title.questions'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('contact') }}"
                       class="text-sm text-gray-400 hover:text-white">{{ 'title.contact_us'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('app_blog') }}"
                       class="text-sm text-gray-400 hover:text-white">{{ 'title.blogs'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('app_market_place_index') }}"
                       class="text-sm text-gray-400 hover:text-white">{{ 'title.market_places'|trans }}</a>
                </li>
            </ul>
        </div>
        <div class="grid grid-cols-1 gap-6 sm:gap-4 sm:grid-cols-2">
            <div>
                <h2 class="mb-4 text-sm font-oswald text-gray-100 uppercase dark:text-white">Resources</h2>
                <ul class="text-gray-500 dark:text-gray-400 font-medium">
                    <li class="mb-2">
                        <a href="https://symfony.com/" class="hover:underline">Symfony</a>
                    </li>
                    <li class="mb-2">
                        <a href="https://tailwindcss.com/" class="hover:underline">Tailwind CSS</a>
                    </li>
                    <li>
                        <a href="https://www.postgresql.org/" class="hover:underline">PostgresSQL</a>
                    </li>
                </ul>
            </div>
            <div>
                <h2 class="mb-4 text-sm font-oswald text-gray-100 uppercase dark:text-white">Legal</h2>
                <ul class="text-gray-500 dark:text-gray-400 font-medium">
                    <li class="mb-2">
                        <a href="{{ path('policy') }}" class="hover:underline">Privacy Policy</a>
                    </li>
                    <li>
                        <a href="{{ path('terms') }}" class="hover:underline">Terms &amp; Conditions</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="bg-gray-900 py-3 text-gray-200 mt-3 border-t border-gray-700">
    <div class="max-w-screen-xl mx-auto flex justify-between items-center">
        <div class="text-sm">
            {% set year =  'now' | date('Y') %}
            {% set build_year = '2023' %}
            <span>&copy; {{ year == build_year ? build_year : build_year ~ '-' ~ year }} {{ 'site.title'|trans }} - {{ 'text.all_right_reserved'|trans }}</span>
        </div>
        <div class="flex justify-end">
            <a href="#" class="text-gray-400 hover:text-gray-100 dark:hover:text-white">
                <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                     viewBox="0 0 8 19">
                    <path fill-rule="evenodd"
                          d="M6.135 3H8V0H6.135a4.147 4.147 0 0 0-4.142 4.142V6H0v3h2v9.938h3V9h2.021l.592-3H5V3.591A.6.6 0 0 1 5.592 3h.543Z"
                          clip-rule="evenodd"></path>
                </svg>
                <span class="sr-only">Facebook page</span>
            </a>
            <a href="#" class="text-gray-400 hover:text-gray-100 dark:hover:text-white ms-5">
