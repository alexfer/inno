<div id="shopping-cart"
     class="fixed top-0 right-0 z-50 p-2 h-screen overflow-y-auto transition-transform translate-x-full bg-white dark:bg-slate-700 w-full md:w-96"
     tabindex="-1"
     aria-labelledby="shopping-cart-label"
     data-url="{{ path('app_market_place_product_order_cart') }}">
    <div class="flex items-center justify-between">
        <h5 class="mb-0 ml-5 font-light text-sm md:text-base leading-normal dark:text-slate-100"
            id="shopping-cart-label">{{ 'store.product.cart'|trans }}
            ({{ shop.quantity()|default(0) }})
        </h5>
        <button type="button"
                class="box-content rounded-none border-none text-slate-500 hover:text-slate-800 hover:no-underline focus:text-slate-800 focus:opacity-100 focus:shadow-none focus:outline-none dark:text-slate-400 dark:hover:text-slate-300 dark:focus:text-slate-300"
                data-drawer-hide="shopping-cart" aria-controls="shopping-cart"
                aria-label="{{ 'form.action.close'|trans }}">
              <span class="[&>svg]:h-6 [&>svg]:w-6">
                <svg xmlns="http://www.w3.org/2000/svg"
                     fill="currentColor"
                     viewBox="0 0 24 24"
                     stroke-width="1.5"
                     stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </span>
        </button>
    </div>
    <div class="offcanvas-body flex-grow pt-2" id="order-body"></div>
</div>