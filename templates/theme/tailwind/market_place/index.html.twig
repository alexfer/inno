{% extends 'base.html.twig' %}
{% block title %}{{ 'title.general.store.name'|trans }}{% endblock %}
{% block offest %}pt-4 py-4 lg:py-8 lg:px-2{% endblock %}
{% block search %}
    {% block childen %}
        <div class="max-w-screen-xl flex mx-auto justify-center mt-8">
            {% include 'market_place/search/search.html.twig' %}
        </div>
    {% endblock %}
{% endblock %}
{% block body %}
    {% block content_body %}
        <h2>{{ 'title.general.store.name'|trans }}</h2>
        <div class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1 gap-3">
            {% for product in products %}
                {% include 'market_place/grid/main.html.twig' %}
            {% endfor %}
        </div>
        {% if products|length == 0 %}
            {% include 'pages/blank-grid.html.twig' %}
        {% endif %}
    {% endblock %}
{% endblock %}
{% block toast %}
    {% include 'layouts/toast/success.html.twig' %}
{% endblock %}