{% extends 'dashboard/index.html.twig' %}

{% set _title_extend = 'title.dashboard.summary'|trans %}
{% block title_extend %}{{ _title_extend }} - {% endblock %}
{% block title_content %}{{ _title_extend }}{% endblock %}

{% block content %}
    {% set periods = {year: 'year', month: 'month', date: 'date'} %}
    <form name="store" method="get" id="store">
        <label for="slug">
            <select name="slug" id="slug">
                {% if stores|length > 1 %}
                    <option value="{{ url('app_dashboard') }}">{{ 'menu.dashboard'|trans }}</option>
                {% endif %}
                {% for store in stores %}
                    <option value="{{ url('app_dashboard', {slug: store.slug}) }}"{{ store.slug == app.request.get('slug') ? ' selected="selected"' : null }}>{{ store.name }}</option>
                {% endfor %}
            </select>
        </label>
    </form>
    <h4 class="mt-5 text-3xl text-gray-500 dark:text-gray-50 font-oswald">{{ store.name }}</h4>
    <div class="mt-5 grid grid-cols-3 gap-4">
        <div class="flex flex-col justify-start items-start border rounded-md p-8 bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
            <div class="flex flex-row-reverse w-full">
                <i class="fa fa-users text-6xl text-sky-500"></i>
                <ul class="mt-5">
                    <li class="text-sm ps-5 dark:text-gray-50">{{ 'table.header.customers'|trans }}</li>
                    <li class="font-medium ps-5 dark:text-gray-50">{{ customers.total }}</li>
                </ul>
            </div>
            <div class="flex flex-col w-full px-5">
                <div class="w-full h-2 bg-gray-200 rounded-md dark:bg-gray-700 mt-5 mb-10">
                    <div class="h-2 bg-blue-400 rounded-md dark:bg-blue-300"
                         style="width: {{ 100 - customers.total }}%"></div>
                </div>
            </div>
        </div>
        <div class="flex flex-col justify-center items-center border rounded-md px-10 bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
            <div class="flex flex-row-reverse w-full">
                <div class="w-32 h-32">
                    <canvas id="chart-orders" data-orders="{{ orders.total }}"></canvas>
                </div>
                <ul class="mt-5">
                    <li class="text-sm ps-5 dark:text-gray-50">{{ 'table.header.orders'|trans }}</li>
                    <li class="font-medium ps-5 dark:text-gray-50">{{ orders.total }}</li>
                </ul>
            </div>
        </div>
        <div class="flex flex-col justify-center items-center border rounded-md px-10 bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
            <div class="flex flex-row-reverse w-full">
                <div class="w-32 h-32">
                    <canvas id="chart-total" data-profit="{{ planedProfit }}" data-total="{{ sum }}"></canvas>
                </div>
                <ul class="mt-5">
                    <li class="text-sm ps-5 dark:text-gray-50">{{ 'table.header.total'|trans }}</li>
                    <li class="font-medium ps-5 dark:text-gray-50">{{ sum|format_number }}{{ store.currency|currency }}</li>
                    <li class="font-medium text-gray-500 ps-5 dark:text-gray-50">{{ planedProfit|format_number }}{{ store.currency|currency }}</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="my-5 gap-4 w-full grid grid-cols-{{ periods|length }}">
        {% set year =  'now' | date('Y') %}
        {% set _date =  'now' | date('Y-m-d') %}
        {% set summary = year %}
        {% if app.request.get('month') is not null %}
            {% set summary = app.request.get('month')|capitalize %}
        {% endif %}
        {% for period in periods %}
            {% set _slug = app.request.get('slug') is null ? store.slug : app.request.get('slug') %}
            <div class="w-full max-w-md bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <div class="flex justify-end px-4 pt-4">
                    <button id="dropdownButton" data-dropdown-toggle="dropdown-{{ period }}"
                            class="inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-1.5"
                            type="button">
                        <span class="sr-only">{{ 'open.sidebar'|trans }}</span>
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                             viewBox="0 0 16 3">
                            <path d="M2 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm6.041 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM14 0a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Z"></path>
                        </svg>
                    </button>
                    {% if period == 'month' %}
                        <div id="dropdown-{{ period }}"
                             class="z-10 hidden text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
                            <ul class="py-2" aria-labelledby="dropdownButton">
                                {% for month in months %}
                                    <li>
                                        <a href="{{ path('app_dashboard', {slug: _slug, period: period, month: month}) }}"
                                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white capitalize">{{ month }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% elseif period == 'date' %}
                        <div id="dropdown-{{ period }}" class="z-10 hidden">
                            <div class="py-2" aria-labelledby="dropdownButton">
                                <div data-url="{{ path('app_dashboard_by_date', {slug: _slug}) }}" id="period-date" data-date="{{ _date }}"></div>
                            </div>
                        </div>
                    {% else %}
                        <div id="dropdown-{{ period }}"></div>
                    {% endif %}
                </div>
                <div class="flex flex-col items-center pb-10">
                    <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white">{{ store.name }}</h5>
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ period }}</span>
                    <div class="flex mt-4 md:mt-6">
                        <a href="{{ path('app_dashboard', {slug: _slug, period: period}) }}"
                           class="py-2 px-4 ms-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Display</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <h5 class="my-1 text-xl font-medium text-gray-900 dark:text-white">{{ summary }}, {{ year }}</h5>
    {% if chart is not null %}
        <div class="grid grid-cols-2 gap-3">
            <div class="">
                {{ render_chart(chart, {'class': 'bg-gray-50 rounded-md p-1.5 dark:bg-gray-100'}) }}
            </div>
            <div></div>
        </div>
    {% else %}
        <div class="text-center text-5xl text-gray-300 capitalize font-oswald py-14">
            Not available data found
        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('chart-js') }}
    {{ encore_entry_script_tags('datepicker-js') }}
    <script type="text/javascript">
        const selector = document.getElementById('store').querySelector('select');
        selector.addEventListener('change', () => window.location.replace(selector.value));
    </script>
{% endblock %}