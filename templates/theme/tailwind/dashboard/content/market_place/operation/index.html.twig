{% extends 'dashboard/index.html.twig' %}

{% set _title_extend = 'title.dashboard.operations'|trans %}
{% block title_extend %}{{ _title_extend }} - {% endblock %}
{% block title_content %}{{ _title_extend }}{% endblock %}

{% block content %}
    <div class="box">
        <ul class="flex flex-col">
            {% for store in stores %}
                <li class="flex items-center px-3 py-4 mt-0 border-dashed border-b border-slate-200 hover:bg-indigo-50/50 dark:hover:bg-slate-800/70 text-slate-800 dark:text-white dark:border-slate-500 last:border-0 cursor-default">
                    <div class="flex-1">
                        <a class="text-indigo-500 font-medium hover:underline underline-offset-4 line-clamp-1"
                           href="{{ path('app_dashboard_market_place_market_product', {store: store.id}) }}">{{ store.name }}</a>
                    </div>
                    <div class="flex-auto">
                        <span class="hidden sm:inline-block">{{ 'table.header.exports'|trans }}</span><span
                                class="ms-1 badge-blue">{{ store.exports }}
                    </div>
                    <div class="flex-1 text-xs lg:text-sm text-nowrap me-2 sm:me-0">{{ store.created|date(date_format) }}</div>
                    <div class="inline-flex space-x-2">
                        <a role="button"
                           href="{{ path('app_dashboard_market_place_operation_import', {store: store.id}) }}"
                           class="hover:text-blue-500 dark:hover:text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500 dark:text-slate-100"
                                 fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 9.75v6.75m0 0-3-3m3 3 3-3m-8.25 6a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z"></path>
                            </svg>
                        </a>
                        <a role="button"
                           href="{{ path('app_dashboard_market_place_operation_export', {store: store.id}) }}"
                           class="hover:text-green-500 dark:hover:text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="h-5 w-5 text-green-500 dark:text-white">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 16.5V9.75m0 0 3 3m-3-3-3 3M6.75 19.5a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z"></path>
                            </svg>
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
        {% if stores|length == 0 %}
            <div class="no-results !mx-0">
                <div>{{ 'table.footer.not_found'|trans }}</div>
            </div>
        {% endif %}
    </div>
{% endblock %}