{% if pageCount > 1 %}
    <div class="inline-block float-end">
        <div class="flex flex-row w-auto space-x-1">
            {% if first is defined and current != first %}
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}"
                   class="bg-white text-gray-600 px-2 border rounded-md py-1 text-sm hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-100 dark:border-gray-600 dark:hover:bg-gray-900">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                        <path fill-rule="evenodd"
                              d="M3.22 7.595a.75.75 0 0 0 0 1.06l3.25 3.25a.75.75 0 0 0 1.06-1.06l-2.72-2.72 2.72-2.72a.75.75 0 0 0-1.06-1.06l-3.25 3.25Zm8.25-3.25-3.25 3.25a.75.75 0 0 0 0 1.06l3.25 3.25a.75.75 0 1 0 1.06-1.06l-2.72-2.72 2.72-2.72a.75.75 0 0 0-1.06-1.06Z"
                              clip-rule="evenodd"/>
                    </svg>
                </a>
            {% endif %}

            {% if previous is defined %}
                <a class="bg-white hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-100 dark:border-gray-600 dark:hover:bg-gray-900 text-gray-600 px-2 mx-1 border rounded-md py-1 text-sm"
                   rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                        <path fill-rule="evenodd"
                              d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z"
                              clip-rule="evenodd"/>
                    </svg>
                </a>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <a class="text-gray-600 px-3 mx-1 border rounded-md py-1 text-sm hover:bg-gray-50 bg-white dark:bg-gray-700 dark:text-gray-100 dark:border-gray-600 dark:hover:bg-gray-900"
                       href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                {% else %}
                    <span class="text-gray-500 font-medium pointer-events-none px-3 mx-1 border rounded-md py-1 text-sm hover:bg-gray-50 bg-white dark:bg-gray-700 dark:text-gray-100 dark:border-gray-600 dark:hover:bg-gray-900">{{ page }}</span>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <a rel="next"
                   class="hover:bg-gray-50 bg-white dark:bg-gray-700 dark:text-gray-100 dark:border-gray-600 dark:hover:bg-gray-900 text-gray-600 px-2 mx-1 border rounded-md py-1 text-sm"
                   href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                        <path fill-rule="evenodd"
                              d="M6.22 4.22a.75.75 0 0 1 1.06 0l3.25 3.25a.75.75 0 0 1 0 1.06l-3.25 3.25a.75.75 0 0 1-1.06-1.06L8.94 8 6.22 5.28a.75.75 0 0 1 0-1.06Z"
                              clip-rule="evenodd"/>
                    </svg>
                </a>
            {% endif %}

            {% if last is defined and current != last %}
                <a class="hover:bg-gray-50 bg-white dark:bg-gray-700 dark:text-gray-100 dark:border-gray-600 dark:hover:bg-gray-900 text-gray-600 px-2 mx-1 border rounded-md py-1 text-sm"
                   href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                        <path fill-rule="evenodd"
                              d="M12.78 7.595a.75.75 0 0 1 0 1.06l-3.25 3.25a.75.75 0 0 1-1.06-1.06l2.72-2.72-2.72-2.72a.75.75 0 0 1 1.06-1.06l3.25 3.25Zm-8.25-3.25 3.25 3.25a.75.75 0 0 1 0 1.06l-3.25 3.25a.75.75 0 0 1-1.06-1.06l2.72-2.72-2.72-2.72a.75.75 0 0 1 1.06-1.06Z"
                              clip-rule="evenodd"/>
                    </svg>
                </a>
            {% endif %}
        </div>
    </div>
{% endif %}