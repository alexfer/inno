<div class="flex items-start gap-2.5 mt-2 mb-4 {{ row.owner != null ? 'ms-5' : null }}">
    <img class="w-8 h-8 rounded-full" src="{{ asset('img/64x64.png') }}" alt="...">
    <div class="flex flex-col w-full max-w-lg leading-1.5">
        <div class="flex items-center space-x-2 rtl:space-x-reverse">
            <span class="text-sm font-semibold text-gray-900 dark:text-white">
                {% if row.owner %}
                    {{ row.owner.userDetails.firstName }} {{ row.owner.userDetails.lastName }}
                {% else %}
                    {{ row.customer.firstName }} {{ row.customer.lastName }}
                {% endif %}
            </span>
            <span class="text-sm font-normal text-gray-500 dark:text-gray-400">{{ row.createdAt|date(datetime_format) }}</span>
        </div>
        <p class="text-sm font-normal py-4 px-2 my-2 border shadow-sm rounded-md text-gray-900 dark:text-white">{{ row.message }}</p>
        <span class="text-sm font-normal text-gray-500 dark:text-gray-400 capitalize">{{ row.priority }}</span>
    </div>
</div>