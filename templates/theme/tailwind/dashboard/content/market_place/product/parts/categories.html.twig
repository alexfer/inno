<div class="flex flex-col">
    <div class="mb-3">
        {{ form_label(form.category, 'entry.form.categories', {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form.category, {attr: {class: 'input-widget'}}) }}
        <span class="input-wrong">{{ form_errors(form.category) }}</span>
    </div>
    <div class="relative mb-3">
        <a data-modal-toggle="modal-brand"
           data-modal-target="modal-brand"
           data-url="{{ path('app_dashboard_market_place_xhr_create_brand', {store: app.request.get('store')}) }}"
           href="#"
           class="text-sm float-end add-entry text-green-600 hover:text-green-400">{{ 'store.brand.create'|trans }}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                 class="inline-flex w-4 h-4 ms-1.5">
                <path fill-rule="evenodd"
                      d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14Zm.75-10.25v2.5h2.5a.75.75 0 0 1 0 1.5h-2.5v2.5a.75.75 0 0 1-1.5 0v-2.5h-2.5a.75.75 0 0 1 0-1.5h2.5v-2.5a.75.75 0 0 1 1.5 0Z"
                      clip-rule="evenodd"/>
            </svg>
        </a>
        {{ form_label(form.brand, 'label.form.brand_name', {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form.brand, {attr: {class: 'input-widget'}}) }}
    </div>
    <div class="relative mb-3">
        <a data-modal-toggle="modal-supplier"
           data-modal-target="modal-supplier"
           data-url="{{ path('app_dashboard_market_place_xhr_create_supplier', {store: app.request.get('store')}) }}"
           data-xhr="{{ path('app_dashboard_market_place_xhr_load_countries', {store: app.request.get('store')}) }}"
           href="#"
           class="text-sm float-end add-entry text-green-600 hover:text-green-400">{{ 'store.supplier.create'|trans }}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                 class="inline-flex w-4 h-4 ms-1.5">
                <path fill-rule="evenodd"
                      d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14Zm.75-10.25v2.5h2.5a.75.75 0 0 1 0 1.5h-2.5v2.5a.75.75 0 0 1-1.5 0v-2.5h-2.5a.75.75 0 0 1 0-1.5h2.5v-2.5a.75.75 0 0 1 1.5 0Z"
                      clip-rule="evenodd"/>
            </svg>
        </a>
        {{ form_label(form.supplier, 'label.form.supplier_name', {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form.supplier, {attr: {class: 'input-widget'}}) }}
    </div>
    <div class="relative mb-3">
        <a data-modal-toggle="modal-manufacturer"
           data-modal-target="modal-manufacturer"
           data-url="{{ path('app_dashboard_market_place_xhr_create_manufacturer', {store: app.request.get('store')}) }}"
           href="#"
           class="text-sm float-end add-entry text-green-600 hover:text-green-400">{{ 'store.manufacturer.create'|trans }}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                 class="inline-flex w-4 h-4 ms-1.5">
                <path fill-rule="evenodd"
                      d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14Zm.75-10.25v2.5h2.5a.75.75 0 0 1 0 1.5h-2.5v2.5a.75.75 0 0 1-1.5 0v-2.5h-2.5a.75.75 0 0 1 0-1.5h2.5v-2.5a.75.75 0 0 1 1.5 0Z"
                      clip-rule="evenodd"/>
            </svg>
        </a>
        {{ form_label(form.manufacturer, 'label.form.manufacturer_name', {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form.manufacturer, {attr: {class: 'input-widget'}}) }}
    </div>
</div>