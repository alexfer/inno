<div class="flex flex-col">
    <div class="mb-3">
        {{ form_label(form.short_name, 'label.form.product_short_name', {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form.short_name, {attr: {class: 'input-widget', 'data-showcounter': 'true', placeholder: 'label.form.product_short_name'}}) }}
        <span class="input-wrong">{{ form_errors(form.short_name) }}</span>
    </div>
    <div class="mb-3">
        {{ form_label(form.name, 'label.form.product_name', {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form.name, {attr: {class: 'input-widget', 'data-showcounter': 'true', placeholder: 'label.form.product_name'}}) }}
        <span class="input-wrong">{{ form_errors(form.name) }}</span>
    </div>
    <div class="mb-3">
        {{ form_label(form.description, 'label.form.product_description', {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form.description, {attr: {class: 'input-widget', rows: 6, placeholder: 'label.form.product_description'}}) }}
        <span class="input-wrong">{{ form_errors(form.description) }}</span>
    </div>
</div>