{% extends 'dashboard/index.html.twig' %}

{% if form.vars.data.id %}
    {% set _title_extend = form.vars.data.name %}
{% else %}
    {% set _title_extend = 'store.coupon.create'|trans %}
{% endif %}
{% block title_extend %}{{ _title_extend }} - {% endblock %}
{% block title_content %}{{ _title_extend }}{% endblock %}

{% block content %}
    {% set _message = app.flashes('success') %}
    <div class="pb-5 shadow-lg border border-t-gray-200 rounded-md dark:bg-gray-800 dark:border-gray-900 p-3">
        {{ form_start(form, {attr: {class: 'group', novalidate: 'novalidate'}}) }}
        <div class="grid grid-cols-2 gap-4">
            <div class="block mb-3">
                {{ form_label(form.name, 'label.form.coupon_name', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.name, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'label.form.coupon_name'}}) }}
                <span class="mt-0.5 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">{{ 'form.name.invalid'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.name) }}</span>
            </div>
            <div class="block mb-3">
                {{ form_label(form.available, 'label.form.available', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.available, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                <span class="mt-0.5 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">{{ 'form.available.invalid'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500 ">{{ form_errors(form.available) }}</span>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
            <div class="block mb-3">
                {{ form_label(form.promotionText, 'label.form.promotion_text', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.promotionText, {attr: {class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'label.form.promotion_text'}}) }}
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.promotionText) }}</span>
            </div>
            <div class="block mb-3">
                {{ form_label(form.type, 'label.form.type', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.type, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'label.form.type'}}) }}
                <span class="mt-0.5 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">{{ 'form.order_limit.invalid'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.type) }}</span>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
            <div class="block mb-3">
                {{ form_label(form.maxUsage, 'label.form.max_usage', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.maxUsage, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'label.form.max_usage'}}) }}
                <span class="mt-0.5 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">{{ 'form.max_usage.invalid'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.maxUsage) }}</span>
            </div>
            <div class="block mb-3">
                {{ form_label(form.orderLimit, 'label.form.order_limit', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.orderLimit, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'label.form.order_limit'}}) }}
                <span class="mt-0.5 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">{{ 'form.order_limit.invalid'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.orderLimit) }}</span>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
            <div class="block mb-3">
                {{ form_label(form.startedAt, 'label.form.startedAt', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.startedAt, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'label.form.startedAt'}}) }}
                <span class="mt-0.5 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">{{ 'form.date.invalid'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.startedAt) }}</span>
            </div>
            <div class="block mb-3">
                {{ form_label(form.expiredAt, 'label.form.expiredAt', {label_attr: {class: 'block mb-1 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.expiredAt, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: 'label.form.expiredAt'}}) }}
                <span class="mt-0.5 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">{{ 'form.date.invalid'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.expiredAt) }}</span>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
            <div class="flex mb-3 items-center ps-4 border border-gray-200 rounded dark:border-gray-700">
                <input {% if form.discount.vars.data is not null %}checked{% endif %} id="coupon-discount" type="radio"
                       value="coupon[discount]" name="discount"
                       class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                <label for="coupon-discount"
                       class="w-full cursor-pointer py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">{{ 'label.form.discount'|trans }}</label>
            </div>
            <div class="flex mb-3 items-center ps-4 border border-gray-200 rounded dark:border-gray-700">
                <input {% if form.price.vars.data is not null %}checked{% endif %} id="coupon-price" type="radio"
                       value="coupon[price]" name="discount"
                       class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                <label for="coupon-price"
                       class="w-full cursor-pointer py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">{{ 'label.form.price.help'|trans }}</label>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
            <div class="block mb-3">
                {{ form_label(form.discount, 'label.form.discount', {label_attr: {class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.discount, {attr: {class: 'w-full h-1.5 bg-gray-200 rounded-sm appearance-none cursor-pointer dark:bg-gray-700', placeholder: '0', disabled: form.discount.vars.data is null ? 'disabled' : false }}) }}
                <div class="relative text-center">
                    <span class="px-1.5 py-1.5 bg-gray-200 rounded-md text-gray-500 discount-output mt-2 mb-5 font-light"></span>
                </div>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.discount) }}</span>
            </div>
            <div class="block mb-3">
                {{ form_label(form.price, 'label.form.price', {label_attr: {class: 'inline-block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                {{ form_widget(form.price, {attr: {class: 'invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', placeholder: '0', disabled: form.price.vars.data is null ? 'disabled' : false}}) }}
                <span class="text-xs text-gray-600 mt-0.5">{{ 'label.form.price.help'|trans }}</span>
                <span class="mt-0.5 block text-sm text-red-500">{{ form_errors(form.price) }}</span>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
            {% for field in form.event.children %}
                <div class="flex mb-3 items-center ps-4 hover:bg-gray-50 checked:bg-gray-50 border border-gray-200 rounded dark:border-gray-700">
                    {{ form_widget(field, {attr: {class: 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600'}}) }}
                    {{ form_label(field, field.vars.label, {label_attr: {class: 'w-full cursor-pointer py-4 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300'}}) }}
                </div>
            {% endfor %}
        </div>
        <input type="hidden" name="flash-success" value="{{ _message[0]|default([]|json_encode) }}">
        <div class="w-full text-center mt-5 pb-1">
            {{ form_widget(form.save, { label: form.vars.data.id ? 'form.action.update' : 'form.action.save', attr: {class: 'inline-block rounded bg-danger px-6 pb-2 pt-2.5 text-xs font-medium uppercase leading-normal text-white shadow-danger-3 transition duration-150 ease-in-out hover:bg-danger-accent-300 hover:shadow-danger-2 focus:bg-danger-accent-300 focus:shadow-danger-2 focus:outline-none focus:ring-0 active:bg-danger-600 active:shadow-danger-2 motion-reduce:transition-none dark:shadow-black/30 dark:hover:shadow-dark-strong dark:focus:shadow-dark-strong dark:active:shadow-dark-strong group-invalid:pointer-events-none group-invalid:opacity-30'}}) }}
            <a type="button"
               href="{{ url('app_dashboard_market_place_product_coupon', {store: app.request.get('store')}) }}"
               class="inline-block rounded bg-gray-500 hover:text-gray-100 px-6 pb-2 pt-2.5 text-xs font-medium uppercase leading-normal text-white shadow-secondary-3 transition duration-150 ease-in-out hover:bg-secondary-accent-300 hover:shadow-secondary-2 focus:bg-secondary-accent-300 focus:shadow-secondary-2 focus:outline-none focus:ring-0 active:bg-secondary-600 active:shadow-secondary-2 motion-reduce:transition-none dark:shadow-black/30 dark:hover:shadow-dark-strong dark:focus:shadow-dark-strong dark:active:shadow-dark-strong">{{ 'form.action.back'|trans }}</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        const inputCouponDiscount = document.getElementById('coupon_discount');
        const inputCouponPrice = document.getElementById('coupon_price');
        const couponDiscount = document.getElementById('coupon-discount');
        const couponPrice = document.getElementById('coupon-price');
        const output = document.querySelector('.discount-output');

        couponDiscount.addEventListener('click', (e) => {
            inputCouponDiscount.removeAttribute('disabled');
            inputCouponPrice.setAttribute('disabled', '');
            // reset value
            inputCouponPrice.value = 0;
        });

        couponPrice.addEventListener('click', (e) => {
            inputCouponPrice.removeAttribute('disabled');
            inputCouponDiscount.setAttribute('disabled', '');
            // reset values
            inputCouponDiscount.value = 0;
            output.textContent = '0%';
        });
    </script>
{% endblock %}
