<div class="grid grid-cols-5 md:grid-cols-6 lg:grid-cols-8 gap-4">
    {% for key, image in images %}
        {% set picture = 'storage/images/' ~ app.user.id ~ '/' ~ image.attachment.name  %}
        <a href="#" class="relative border p-1 rounded-lg align-bottom bg-white transition-all duration-300 filter grayscale-0 hover:grayscale">
            <img class="h-auto max-w-full rounded-lg" src="{{ asset(picture)|imagine_filter('image_thumb') }}" alt="...">
            <label class="absolute top-1 start-2 cursor-pointer w-full" for="i-{{ key }}">
                <input type="checkbox" name="product[{{ key }}]" value="{{ image.attachment.id }}"
                       class="checkbox-indigo"
                       id="i-{{ key }}"/>
                <span class="sr-only">{{ image.attachment.name }}</span>
            </label>
        </a>
    {% endfor %}
</div>