{% extends 'dashboard/index.html.twig' %}

{% set _title_extend = 'title.dashboard.overview.conversation'|trans %}
{% block title_extend %}{{ _title_extend }} - {% endblock %}
{% block title_content %}{{ _title_extend }}{% endblock %}

{% block content %}
    <div class="shadow-md sm:rounded-lg h-max">
        <div class="p-4">
            {% for message in messages %}
                <div class="flex items-start pt-5 px-2.5 pb-2 gap-2.5">
                    <img class="w-8 h-8 rounded-full" src="{{ asset('img/user-picture.jpg') }}"
                         alt="{{ message.sender.userDetails.firstName }} {{ message.sender.userDetails.lastName }}">
                    <div class="flex flex-col w-full max-w-4xl leading-1.5 p-2.5 rounded-lg{% if message.sender.userDetails.user.id != app.user.id %} bg-gray-100{% endif %}">
                        <div class="flex items-center space-x-2 rtl:space-x-reverse">
                            <span class="text-sm font-semibold text-gray-900 dark:text-white">{{ message.sender.userDetails.firstName }} {{ message.sender.userDetails.lastName }}</span>
                            <span class="text-sm font-normal text-gray-500 dark:text-gray-400">{{ message.createdAt|date('F j, H:i') }}</span>
                        </div>
                        <p class="text-sm font-normal py-2 text-gray-900 dark:text-white">{{ message.body }}</p>
{#                        <span class="text-sm font-normal text-gray-500 dark:text-gray-400">{% if message.isRead %}{{ 'status.delivered'|trans }}{% else %}{{ 'status.unread'|trans }}{% endif %}</span>#}
                    </div>
                    <button id="dropdownMenuIconButton" data-dropdown-toggle="dropdownDots-{{ message.id }}"
                            data-dropdown-placement="bottom-start"
                            class="inline-flex self-center items-center p-2 text-sm font-medium text-center text-gray-900 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none dark:text-white focus:ring-gray-50 dark:bg-gray-900 dark:hover:bg-gray-800 dark:focus:ring-gray-600"
                            type="button">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                             xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 4 15">
                            <path d="M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"/>
                        </svg>
                    </button>
                    <div id="dropdownDots-{{ message.id }}"
                         class="z-20 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-40 dark:bg-gray-700 dark:divide-gray-600">
                        <ul class="py-2 text-sm text-gray-700 dark:text-gray-200"
                            aria-labelledby="dropdownMenuIconButton">
                            {% if message.sender.userDetails.user.id != app.user.id %}
                                <li>
                                    <a href="javascript:void(0)" data-recipient="{{ message.sender.userDetails.user.id }}"
                                       data-hub="{{ app.request.get('hub') }}" data-id="{{ message.id }}"
                                       class="block reply px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">{{ 'text.reply'|trans }}</a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="#"
                                       class="block remove px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">{{ 'text.delete'|trans }}</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
            <form class="group my-3 hidden" name="publish-message" autocomplete="off"
                  action="{{ path('app_dashboard_publish_reply') }}">
                <input type="hidden" id="recipient" name="recipient" value="">
                <input type="hidden" id="hub" name="hub" value="">
                <input type="hidden" id="id" name="id" value="">
                <label for="message" class="sr-only">{{ 'form.your.message'|trans }}</label>
                <div class="flex items-center px-3 py-2 rounded-lg bg-gray-50 dark:bg-gray-700">
                    <textarea id="message" autocomplete="off" name="message" minlength="20" maxlength="255" rows="2"
                              required
                              class="invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 peer resize-none block mx-4 p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                              placeholder="{{ 'form.your.message'|trans }}"></textarea>
                    <button type="submit"
                            class="inline-flex justify-center p-2 text-blue-600 rounded-full cursor-pointer hover:bg-blue-100 dark:text-blue-500 dark:hover:bg-gray-600 group-invalid:pointer-events-none group-invalid:opacity-30">
                        <svg class="w-5 h-5 rotate-90 rtl:-rotate-90" aria-hidden="true"
                             xmlns="http://www.w3.org/2000/svg"
                             fill="currentColor" viewBox="0 0 18 20">
                            <path d="m17.914 18.594-8-18a1 1 0 0 0-1.828 0l-8 18a1 1 0 0 0 1.157 1.376L8 18.281V9a1 1 0 0 1 2 0v9.281l6.758 1.689a1 1 0 0 0 1.156-1.376Z"></path>
                        </svg>
                        <span class="sr-only">{{ 'form.action.send'|trans }}</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('hub-js') }}
{% endblock %}