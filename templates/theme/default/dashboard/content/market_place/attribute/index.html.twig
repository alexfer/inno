{% extends 'dashboard/index.html.twig' %}

{% set _title_extend = 'title.dashboard.attributes'|trans %}
{% block title_extend %}{{ _title_extend }} - {% endblock %}
{% block title_content %}
    {{ _title_extend }}
    <a type="button" class="btn btn-sm external btn-outline-secondary float-end mt-1"
       href="{{ path('app_dashboard_market_place_create_attribute', {market: market.id}) }}">{{ 'market.attribute.create'|trans }}</a>
{% endblock %}

{% block content %}
    {% include 'dashboard/content/market_place/navbar/nav.html.twig' %}
    <div class="table-responsive card">
        <table class="table table-hover table-borderless mb-0">
            <thead>
            <tr>
                <th class="bg-secondary text-white text-center font-weight-light" scope="col">{{ 'table.header.id'|trans }}</th>
                <th class="bg-secondary text-white font-weight-light" scope="col">{{ 'table.header.name'|trans }}</th>
                <th class="bg-secondary text-white font-weight-light text-center" scope="col">{{ 'table.header.handle'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for attribute in attributes %}
                <tr>
                    <th scope="row" class="text-center">{{ attribute.id }}</th>
                    <td>
                        <a data-toggle="tooltip"
                           data-placement="right"
                           class="link"
                           title="{{ attribute.name }}"
                           href="{{ path('app_dashboard_market_place_edit_attribute', {market: attribute.market.id, id: attribute.id}) }}">
                            {{ attribute.name }}
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('app_dashboard_market_place_edit_attribute', {market: attribute.market.id, id: attribute.id}) }}"
                           class="btn btn-sm btn-outline-lightning rounded px-1 py-0">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a
                                class="btn btn-sm btn-outline-lightning rounded delete-entry px-1 py-0 {{ attribute.marketProductAttributeValues.count ? 'disabled' : '' }}"
                                data-token="{{ csrf_token('delete') }}"
                                data-url="{{ url('app_dashboard_delete_attribute', {market: attribute.market.id, id: attribute.id}) }}"
                                data-bs-toggle="modal"
                                data-bs-target="#modal-delete">
                            <i class="bi bi-{{ attribute.marketProductAttributeValues ? 'ban' : 'trash' }}"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-bg-light">{{ 'table.footer.not_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}