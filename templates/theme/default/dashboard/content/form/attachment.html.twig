{% set _params = {
    remove: {
        title: 'swal.remove.title'|trans,
        text: 'swal.remove.text'|trans,
        icon: 'warning'
    },
    default: {
        title: 'swal.default.title'|trans,
        text: 'swal.default.text'|trans,
        icon: 'info'
    },
    success: {
        title: 'title.service.message'|trans,
        icon: 'success'
    }
} %}
<div class="form-group mb-3 card">
    <a class="form-title card-header" data-bs-toggle="collapse" href="#attachments" role="button"
       aria-expanded="true"
       aria-controls="attachments">{{ 'entry.form.attachments'|trans }}</a>
    <div class="collapse show mt-2" id="attachments">
        <div class="card-body">
            <div class="loader row mx-auto justify-content-center align-items-center flex-column">
                <div class="col pt-50 d-inline-block">
                    <div class="spinner-grow text-success" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="table entry-attachments" data-params="{{ _params|json_encode }}">
                {% if app.request.get('id') %}
                    {% for key, picture in attachments|slice(0, 4) %}
                        {% set _picture = 'storage/'~ storage ~'/picture/' ~ id ~ '/' ~ picture.attach.name %}
                        <div class="d-inline-block mr-3 mb-3">
                            <img class="attach" src="{{ asset(_picture) | imagine_filter(filter) }}" alt="...">
                            <div class="handlers" data-id="{{ picture.attach.id }}">
                                <a href="#" data-action="remove"
                                   class="bi bi-trash-fill"></a>
                                <a href="{{ path('app_dashboard_blog_attach_set_use', {entry: entry.id}) }}"
                                   data-action="default"
                                   class="bi bi-person-bounding-box"></a>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="card-footer">
            <div class="input-group mb-1">
                <input type="file" class="form-control border-0 bg-light" name="entry[picture]" id="picture"
                       aria-label="{{ 'label.form.entry_picture'|trans }}"
                       style="max-width: 400px;"
                       aria-describedby="attach" accept="image/png, image/jpeg">
                <button class="btn btn-outline-light position-absolute end-0 mx-1 z-3"
                        type="button"
                        data-label="{{ 'label.form.entry_picture'|trans }}"
                        data-url="{{ path('app_dashboard_blog_attach', {id: app.request.get('id')}) }}"
                        id="attach">{{ 'label.form.attach'|trans }}</button>
            </div>
            <small class="picture-info text-muted ms-1 pt-1 w-100"></small>
        </div>
    </div>
</div>