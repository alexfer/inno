<div class="form-group mb-3">
    <a class="form-title card card-header" data-bs-toggle="collapse" href="#categories" role="button"
       aria-expanded="false"
       aria-controls="categories">{{ 'entry.form.categories'|trans }}</a>
    <div class="collapse mt-2 active" id="categories">
        <div class="card card-body">
            {% for key, category in categories %}
                {% set _checked = '' %}
                {% for Category in collection %}
                    {% if category.id == Category.category.id %}
                        {% set _checked = 'checked' %}
                    {% endif %}
                {% endfor %}
                <div class="form-check form-switch">
                    <input type="checkbox" name="category[{{ category.id }}]" role="switch" class="form-check-input"
                           id="category-{{ category.id }}" {{ _checked }}>
                    <label class="form-check-label" for="category-{{ category.id }}">{{ category.name }}</label>
                </div>
            {% endfor %}
        </div>
    </div>
</div>