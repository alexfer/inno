<div class="modal fade" id="modal-delete" tabindex="-1" role="dialog" aria-labelledby="modal-delete" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'dashboard.entry.delete'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="{{ 'form.action.close'|trans }}"></button>
            </div>
            <div class="modal-body">
                {{ 'alert.confirm.delete'|trans }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal">{{ 'form.action.cancel'|trans }}</button>
                <form method="post" class="confirm" action="">
                    <input type="hidden" id="#token" name="_token" value="">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> {{ 'form.action.delete'|trans }}</button>
                </form>
            </div>
        </div>
    </div>
</div>