{{ form_start(form, {attr: {class: 'tech-form', novalidate: 'novalidate'}}) }}
{% if error %}
    <div class="alert alert-danger">
        {{ error.message }}
    </div>
{% endif %}
<div class="form-row shadow-sm">
    <div class="col-md-2"></div>
    <div class="col-md-8 px-5 pt-2">
        <div class="form-group row">
            {{ form_label(form.email, 'label.form.email', {attr: {class: 'col-sm-2 col-form-label'}}) }} <span
                    class="text-danger">*</span>
            {{ form_widget(form.email, {attr: {value: last_username, class: 'form-control', placeholder: 'label.form.email'}}) }}
            {% if form_errors(form.email) %}
                <small class="form-text text-danger">{{ form_errors(form.email) }}</small>
            {% else %}
                <small class="form-text text-muted">{{ 'form.email.help'|trans }}</small>
            {% endif %}
        </div>
        <div class="form-group row">
            {{ form_label(form.password, 'label.form.password') }} <span class="text-danger">*</span>
            {{ form_widget(form.password, {attr: {class: 'form-control', placeholder: 'label.form.password'}}) }}
            {% if form_errors(form.email) %}
                <small class="form-text text-danger">{{ form_errors(form.password) }}</small>
            {% else %}
                <small class="form-text text-muted">{{ 'form.password.help'|trans }}</small>
            {% endif %}
        </div>
        <div class="form-check pl-1">
            {{ form_widget(form._remember_me, {attr: {class: 'form-check-input', checked: 'checked'}}) }}
            {{ form_label(form._remember_me, 'label.form.keep_me_logged_in', {attr: {class: 'form-check-label'}}) }}
        </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-12 text-center my-4">
        <input type="hidden" name="_target_path" value="{{ path('app_dashboard') }}"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {{ form_widget(form.login, { label: 'form.action.login' }) }}
    </div>
</div>
{{ form_end(form) }}
