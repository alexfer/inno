{% extends 'base.html.twig' %}

{% block title %}{{ 'text.faq.header'|trans }}{% endblock %}

{% block body %}
    <section class="container mt-lg-2">
        <div class="row">
            <div class="col-12 card card-body bg-white border-bottom-0 border-start-0 border-end-0">
                <h4 class="ps-2 border-start border-3 border-danger mb-3">{{ 'title.questions'|trans }}</h4>
                <div class="accordion accordion-flush" id="accordion">
                    {% for key, entry in entries %}
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="flush-heading-{{ key }}">
                                <button class="accordion-button collapsed  bg-light border-0 fs-5" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-{{ key }}" aria-expanded="false" aria-controls="flush-collapse-{{ key }}">
                                    {{ entry.title }}
                                </button>
                            </h2>
                            <div id="flush-collapse-{{ key }}" class="accordion-collapse collapse" aria-labelledby="flush-heading-{{ key }}" data-bs-parent="#accordion">
                                <div class="accordion-body py-5">
                                    {{ entry.content|raw }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
