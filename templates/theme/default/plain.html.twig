<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}{{ 'site.title'|trans }}{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="d-flex flex-column min-vh-100">
<div class="preloader">
    <div class="position-absolute justify-content-between top-50 start-50">
        <div class="lds-spinner">
            {% for i in range(0, 11) %}
                <div></div>
            {% endfor %}
        </div>
    </div>
</div>
<div class=" container-fluid bg-danger position-absolute h-25 z-n1"></div>
{% include 'layouts/navbar.html.twig' %}
<main class="main-container mb-xxl-5">
    {% block body %}{% endblock %}
</main>
<footer class="footer mt-auto py-3 bg-dark mt-5">
    <div class="container">
        <div class="text-center text-white">
            {% set year =  'now' | date('Y') %}
            {% set build_year = '2023' %}
            <span>&copy; {{ year == build_year ? build_year : build_year ~ '-' ~ year }} {{ 'site.title'|trans }} - {{ 'text.all_right_reserved'|trans }}</span>
        </div>
    </div>
</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('market-js') }}
{% endblock %}
</body>
</html>
