{% extends 'plain.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <section class="container mt-lg-2">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8 card card-body bg-light shadow">
                <h4 class="ps-2 border-start border-3 border-danger mb-3">{{ 'text.reset_password.sent'|trans }}</h4>
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger mx-3 mb-0" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <p class="mb-2">
                    {{ 'text.reset_password.infio'|trans }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                </p>
                <hr>
                <p class="mb-5">{{ 'text.reset_password.resend'|trans({'link':  path('app_forgot_password_request') })|raw }}</p>
            </div>
            <div class="col-2"></div>
        </div>
    </section>
{% endblock %}
