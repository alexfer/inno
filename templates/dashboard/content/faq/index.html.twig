{% extends 'dashboard/index.html.twig' %}

{% block title_content %}{{ 'title.dashboard.faq'|trans }}{% endblock %}

{% block content %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-1 text-center" scope="col">#</th>
                <th class="col-7" scope="col">Title</th>
                <th class="col-2 text-center" scope="col">Status</th>
                <th class="col-2 text-center" scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in entries %}
                {% set _status = entry.visible ? 'badge-success': 'badge-secondary' %}
            <tr>
                <th scope="row" class="text-center">{{ entry.id }}</th>
                <td>{{ entry.title }}</td>
                <td class="text-center">
                    <span class="badge {{ _status }} p-2">{{ entry.visible ? 'Published': 'Hidden' }}</span>
                </td>
                <td class="text-center">
                    <a href="{{ path('app_dashboard_faq_edit', {id: entry.id}) }}" class="btn btn-sm btn-outline-lightning rounded mr-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-sm btn-outline-lightning rounded">
                        <i class="bi bi-archive"></i>
                    </a>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-info bg-grey">Results not found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
