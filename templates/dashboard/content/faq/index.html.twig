{% extends 'dashboard/index.html.twig' %}

{% set _title_extend = 'title.dashboard.faq'|trans %}
{% block title_extend %}{{ _title_extend }} - {% endblock %}
{% block title_content %}{{ _title_extend }}{% endblock %}

{% block content %}
    <div class="table-responsive table-sm card">
        <table class="table table-hover table-borderless mb-0">
            <thead class="bg-secondary text-white">
            <tr>
                <th class="col-1 text-center" scope="col">{{ 'table.header.id'|trans }}</th>
                <th class="col-8" scope="col">{{ 'table.header.title'|trans }}</th>
                <th class="col-1 text-center" scope="col">{{ 'table.header.status'|trans }}</th>
                <th class="col-2 text-center" scope="col">{{ 'table.header.handle'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for entry in entries %}
                {% set _status = entry.visible ? 'badge-success': 'badge-info' %}
                {% set _trashed = entry.deletedAt ? 'badge-danger': 'badge-success' %}
                {% set _visible = entry.visible ? 'Published': 'Hidden' %}
                <tr>
                    <th scope="row" class="text-center">{{ entry.id }}</th>
                    <td>
                        {% if  entry.deletedAt %}
                            <s class="text-muted">{{ entry.title }}</s>
                        {% else %}
                            {{ entry.title }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <span class="badge {{ entry.deletedAt ? _trashed : _status }} p-2">{{ entry.deletedAt ? 'Trashed' : _visible }}</span>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('app_dashboard_edit_faq', {id: entry.id}) }}"
                           class="btn btn-sm btn-outline-lightning rounded px-1 py-0 mr-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        {% if entry.deletedAt %}
                            <a class="btn btn-sm btn-outline-lightning rounded restore-entry px-1 py-0"
                               href="{{ path('app_dashboard_restore_faq', {id: entry.id}) }}">
                                <i class="bi bi-caret-up-square-fill"></i>
                            </a>
                        {% else %}
                            <a
                                    class="btn btn-sm btn-outline-lightning rounded delete-entry px-1 py-0"
                                    data-token="{{ csrf_token('delete') }}"
                                    data-url="{{ url('app_dashboard_delete_faq', {id: entry.id}) }}"
                                    data-toggle="modal"
                                    data-target="#modal-delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-danger bg-grey">{{ 'table.footer.not_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
