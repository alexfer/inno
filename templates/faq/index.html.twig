{% extends 'base.html.twig' %}

{% block title %}{{ 'text.faq.header'|trans }}{% endblock %}

{% block body %}
    <div class="page-title-area questions">        
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-title-content">
                        <h2>{{ 'text.faq.header'|trans }}</h2>
                        <p>{{ 'text.faq.desc'|trans|raw }}</p>
                    </div>
                </div>                
            </div>
        </div>
    </div>
    <section class="section-area mb-50">
        <div class="col-lg-12 col-md-12">
            <div class="container">                
                <div class="row">
                    <div class="col-lg-10 offset-lg-1">
                        <div class="faq-accordion">
                            <ul class="accordion">
                                {% for entry in entries %}
                                <li class="accordion-item">
                                    <a class="accordion-title {{ loop.index == 1 ? 'active' : '' }}" href="#" data-toggle="accordion-content"> <i class="fa fa-caret-down"></i>
                                        {{ entry.title }}</a>
                                    <p class="accordion-content {{ loop.index == 1 ? 'show' : '' }}">{{ entry.content|raw }}</p>
                                </li>
                                {% endfor %}                                                                
                            </ul>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </section>
{% endblock %}
