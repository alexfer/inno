{% extends 'base.html.twig' %}

{% block title %}{{ 'http_error.name'|trans({ 'status_code': 500 }) }}{% endblock %}

{% block body %}
    <div class="page-title-area default">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-title-content">
                        <h2>{{ 'http_error.name'|trans({ 'status_code': status_code }) }}</h2>
                        <p>{{ 'http_error.description'|trans({ 'status_code': status_code }) }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="section-area default">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-light text-dark shadow-sm" role="alert">
                        <h4 class="alert-heading">
                            <span class="text-danger">{{ 'http_error.name'|trans({ 'status_code': status_code }) }}</span>
                        </h4>
                        <p>{{ 'http_error.description'|trans({ 'status_code': status_code }) }}</p>
                        <hr>
                        <p class="mb-0">{{ 'http_error.suggestion'|trans({ 'url': path('app_index') })|raw }}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}